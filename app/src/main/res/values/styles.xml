<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowLightStatusBar">false</item>

        <!-- Header, status bar -->
        <item name="colorControlNormal">#000000</item>
        <item name="colorPrimary">#242d37</item>
        <item name="colorPrimaryDark">#242d37</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorControlHighlight">#cccccc</item>

        <!-- Text color -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">#ffffff</item>

        <!-- Color accents -->
        <item name="colorAccent">?colorPrimary</item>
        <item name="android:colorForeground">#000000</item>

        <item name="disabled_color">#919090</item>
        <item name="disabled_color_text">#919090</item>
    </style>

</resources>
