<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carListCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatLogo"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:src="@drawable/cat_ava"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_overlay="false"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Сергей Сергеевич"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Соберемся, ящас хочу чуть отдохнуть, а то вообще че то уже каждый день ебошу аж лететь перестало!)"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>